{
  "compilerOptions": {
    "target": "ES5",
    "sourceMap": true,  
    "outDir": "./dist",   
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                    
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },

  "include": ["./src/**/*"],
  "exclude": [
      "./node_modules/**/*",
      "./dist/**/*"
  ]
}
