{
  "compilerOptions": {
    "target": "ES5",
    "sourceMap": true,  
    "outDir": "./dist",   
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                                    
    "noImplicitAny": true,
    "esModuleInterop": true,
  },
  "ts-node": {    "files": true  },
  "include": ["src/**/*.ts"],
  "exclude": [
      "./node_modules/**/*",
      "./dist/**/*"
  ]
}
